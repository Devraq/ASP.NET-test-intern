@{
    ViewData["Title"] = "Delete Attendance Date";
    var dates = ViewBag.Dates as List<DateTime>;
}

<h2>Delete Attendance Date</h2>

@if (TempData["Message"] != null)
{
    <p style="color: green;">@TempData["Message"]</p>
}

<form asp-action="DeleteAttendanceDate" method="post">
    <div>
        <label for="tanggalAbsen">Select Date to Delete</label>
        <select name="tanggalAbsen" id="tanggalAbsen" required>
            <option value="">-- Select Date --</option>
            @foreach (var date in dates)
            {
                <option value="@date.ToString("yyyy-MM-dd")">@date.ToString("yyyy-MM-dd")</option>
            }
        </select>
    </div>

    <button type="submit" onclick="return confirm('Are you sure you want to delete all records for this date?');">
        Delete
    </button>
</form>
